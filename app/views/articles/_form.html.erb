<%= form_for(article) do |f| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label>Select Articles Section:</label><br>
   <%= f.collection_select :section_ids, Section.all, :id, :name, {prompt: "Select Category"}, 
    {:required => true, class: "select", style: "width: 100%;"} %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :articleimage %>
    <%= f.file_field :articleimage %>
  </div>

  <div class="field">
    <%= f.label :videolink %>
    <%= f.text_field :videolink %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.label :metadescription %>
    <%= f.text_field :metadescription %>
  </div>

  <div class="field">
    <%= f.label :metakeywords %>
    <%= f.text_field :metakeywords %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
