
<style type="text/css">
  
trix-editor {
  border: 1px solid #bbb;
  border-radius: 3px;
  margin: 0;
  padding: 0.4em 0.6em;
  min-height: 200px;
  outline: none;
  background-color: #ffffff;
}

</style>

 <% if notice %>
<div class="alert alert-success alert-dismissible" role="alert" style="margin-bottom: 10px;">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <p class="notice"><%= notice %></p>
</div>
<% end %>

<%= form_for(article) do |f| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label>Select Articles Section:</label><br>
   <%= f.collection_select :section_ids, Section.all, :id, :name, {prompt: "Select Category"}, 
    {:required => true, class: "select", style: "width: 100%;"} %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :articleimage %>
    <%= f.file_field :articleimage, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :videolink %>
    <%= f.text_field :videolink, :class => "form-control" %>
  </div>

  <div class="form-group">
    <p>Article Body</p>
    <%= f.trix_editor :body  , :rows => "6" %>
  </div>

  <div class="form-group">
    <%= f.label :bleb %>
    <%= f.text_field :bleb, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :metadescription %>
    <%= f.text_field :metadescription, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :metakeywords %>
    <%= f.text_field :metakeywords, :class => "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", :class => "btn btn-success btn-lg" %>
  </div>
<% end %>
