<h1>Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Companyname</th>
      <th>Numofemployees</th>
      <th>Usedsocmedmarket</th>
      <th>Wasiteffective</th>
      <th>Doyouhave</th>
      <th>Usedanytopromote</th>
      <th>Email</th>
      <th>Phonenum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.name %></td>
        <td><%= appointment.companyname %></td>
        <td><%= appointment.numofemployees %></td>
        <td><%= appointment.usedsocmedmarket %></td>
        <td><%= appointment.wasiteffective %></td>
        <td><%= appointment.doyouhave %></td>
        <td><%= appointment.usedanytopromote %></td>
        <td><%= appointment.email %></td>
        <td><%= appointment.phonenum %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

