<style type="text/css">

.holdproj{
  background-color: #ffffff;
  border-radius: 0px;
  padding: 15px;
  -webkit-box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.21);
  -moz-box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.21);
  box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.21);
  margin-bottom: 20px;
  margin-top: 6px;
}

</style>

<div class="col-lg-12">
	<div class="holdproj">
        <h2 style="font-weight: 700; font-size: 17px;"><%= project.title %></h2>
        <span style="color: #d9d9d9; font-weight: 500;">Authored By: Bernard Matic Lomo</span>
        <p><%= project.costs.first.amount %></p>

        <p><%= project.users.first.email %></p>

        <p>
        <% if project.active? %>
        Active | Work Started
        <% else %>
        Inactive | Work not started
        <% end %>
        </p>

        <p><%= project.projecttypes.first.name %></p>
        <p><%= project.details %></p>
        <p><%= link_to "Goto Project", project, :style => "color: #5cc804;" %></p>
    </div>
</div>